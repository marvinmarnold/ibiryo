<% row_count = 0 %>
<% items.each_slice(2) do |item_slice| -%>
  <div class="row-fluid">
    <% item_in_row = 0 -%>
    <% item_slice.each do |item| -%>
      <%= render "items/show", { item: item, placement: placement(item_in_row), item_class: row_class(row_count) } %>
      <% item_in_row += 1 -%>
    <% end -%>
  </div>
  <% row_count += 1 %>

  <% if can_and_want_see_everything? %>
    <div class="row-fluid">
      <% item_slice.each do |item| -%>
        <%= link_to t("shops.show.menus.items.edit", item: item.name),
            edit_menu_section_item_path(item.menu_section, item), class: "alert span3 item-edit" %>
        <%= link_to t("shop.show.menus.items.remove", item: item.name),
            menu_section_item_path(item.menu_section, item),
            class: "alert span3 item-remove",
            method: :delete %>
      <% end -%>
    </div>
    <br/>
  <% end %>
<% end -%>

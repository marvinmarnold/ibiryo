<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t("brand.company_name"), root_path_for_shopper, class: "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <li><%= link_to t("navbar.about_link"), about_path %></li>
          <li><%= link_to t("navbar.security_link"), security_path %></li>
          <li><%= link_to t("navbar.contact_link"), contact_path %></li>
        </ul>
      </div>
      <div class="nav pull-right">
        <% if user_signed_in? %>
          <%= render "layouts/navbar/account_links" %>
        <% else %>
          <li><%= render "layouts/navbar/language_links" %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to t("navbar.sign_in"), login_path %></li>
        <% end %>

      </div>
      <%= form_tag(root_path, method: :get, class: "navbar-search pull-right") do %>
			  <%= text_field_tag :q, nil, class: "search-query", placeholder: t("navbar.search.placeholder") %>
			<% end %>
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
    </div>
  </div>
</div>

// Place all the styles related to the items controller here.
// They will automatically be included in application.css.
// You can use Sass (SCSS) here: http://sass-lang.com/


@mixin selectable($default-color, $highlight-color) {
  background-color: $default-color;
  border: 1px solid $default-color;
  &:hover {
    background-color: $highlight-color;
    text-decoration: none;
    color: black;
  }
}

.item-base {
  color: black;
  text-decoration: none;
}

.item-main {
  @include selectable($main-color, $main-color-highlight)
}

.item-secondary {
  @include selectable(darken(white, 5%), $main-color-highlight)
}
